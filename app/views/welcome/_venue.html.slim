coffee:
  map = undefined
  markers = []

  addMarker = (map, location) ->
    marker = new google.maps.Marker(
      position: location
      map: map
    )
    markers.push marker


  initialize = ->
    mapOptions =
      center: new google.maps.LatLng(50.45408432, 30.59213219)
      zoom: 12

    map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions)
    addMarker(map, new google.maps.LatLng(50.45408432, 30.59213219))

  google.maps.event.addDomListener window, "load", initialize
