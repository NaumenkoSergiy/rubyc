.speaker.col-xs-12.col-md-6(id="speaker_#{speaker.id}")
  - if speaker.foto && speaker.foto.image
    p.foto= image_tag speaker.foto.image.url(:thumb)
  h3.name= speaker.name
  h4.theme= speaker.theme
  - unless speaker.summary.blank?
    p.summary== speaker.summary
  - unless speaker.about.blank?
    p.about== speaker.about
